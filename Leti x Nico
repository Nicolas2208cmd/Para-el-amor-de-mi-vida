    <script>
        function animarCarta() {
            let carta = document.getElementById("carta");
            carta.src = "https://upload.wikimedia.org/wikipedia/commons/e/ec/Opened_Envelope.png";
            setTimeout(mostrarMensaje, 1000);
        }
        
        function mostrarMensaje() {
            document.getElementById("mensaje").style.display = "block";
            let texto = "Cuando te conocÃ­...\n\nSentÃ­ que el universo se alineaba para ponerte en mi vida. Desde entonces, cada dÃ­a a tu lado es un regalo, una historia de amor que nunca deja de sorprenderme. Eres mi felicidad, mi paz y mi todo. ğŸ’–";
            let i = 0;
            let intervalo = setInterval(() => {
                if (i < texto.length) {
                    document.getElementById("texto").textContent += texto[i];
                    i++;
                } else {
                    clearInterval(intervalo);
                    document.getElementById("spotify").style.display = "block";
                    document.getElementById("spotify").src = "https://open.spotify.com/embed/track/1YZv0A2RSk4B1m5M4nDsm5";
                    document.getElementById("nombre").textContent = "Para: Leti la dueÃ±a de mi â¤";
